# roles/traefik/templates/traefik-values.yml.j2
deployment:
  replicas: {{ traefik_replicas }}

service:
  type: LoadBalancer
  annotations:
    metallb.universe.tf/address-pool: contabo-pool

# No anti-affinity: with 1 replica + ReadWriteOnce PVC, spreading would leave 2nd pod pending

# Chart v39+: redirectTo → http.redirections.entryPoint; tls → http.tls
ports:
  web:
    port: 80
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
          permanent: true
  websecure:
    port: 443
    http:
      tls:
        enabled: true

certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ admin_email }}
      storage: /data/acme.json
      httpChallenge:
        entryPoint: web

persistence:
  enabled: true
  size: 256Mi

ingressRoute:
  dashboard:
    enabled: {{ traefik_dashboard_exposed | default(false) }}

additionalArguments:
  - '--global.checknewversion=false'
  - '--global.sendanonymoususage=false'
  - '--log.level=WARN'
  - '--api.insecure=false'
  - '--accesslog=true'
  - '--accesslog.filepath=/var/log/traefik/access.log'

resources:
  requests:
    cpu: 100m
    memory: 128Mi
  limits:
    cpu: 500m
    memory: 512Mi
