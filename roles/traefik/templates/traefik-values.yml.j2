# roles/traefik/templates/traefik-values.yml.j2
deployment:
  replicas: {{ traefik_replicas }}

{% if (monitoring_enabled | default(false)) or (bugsink_enabled | default(false)) %}
# Allow IngressRoutes in traefik namespace to reference services in other namespaces (monitoring, bugsink)
providers:
  kubernetesCRD:
    allowCrossNamespace: true
{% endif %}

service:
  type: LoadBalancer
  annotations:
    metallb.universe.tf/address-pool: contabo-pool
  spec:
    externalTrafficPolicy: Local   # Preserve client IP for vpn-allowlist middleware

# For 2+ replicas: use persistence.storageClass with ReadWriteMany (RWX) so all pods can mount the same volume (ACME certs).

# Chart v39+: redirectTo → http.redirections.entryPoint; tls → http.tls
# With hostPort, node forwards 80/443 to Traefik (8000/8443) — no privileged port bind in container
ports:
  web:
    hostPort: 80
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
          permanent: true
{% if traefik_cloudflare_proxy_enabled | default(false) %}
    forwardedHeaders:
      trustedIPs: {{ traefik_cloudflare_ip_ranges }}
{% endif %}
  websecure:
    hostPort: 443
    http:
      tls:
        enabled: true
{% if traefik_cloudflare_origin_pull_enabled | default(false) %}
        options: cloudflare-origin-pull
{% endif %}
{% if traefik_cloudflare_proxy_enabled | default(false) %}
    forwardedHeaders:
      trustedIPs: {{ traefik_cloudflare_ip_ranges }}
{% endif %}

certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ admin_email }}
      storage: /data/acme.json
      httpChallenge:
        entryPoint: web

persistence:
  enabled: true
  size: 256Mi
{% if traefik_persistence_storage_class | default('') | length > 0 %}
  storageClass: "{{ traefik_persistence_storage_class }}"
{% endif %}

ingressRoute:
  dashboard:
    enabled: {{ (traefik_dashboard_exposed | default(false)) or (vpn_internal_ui_enabled | default(false)) }}

{% if monitoring_enabled | default(false) and monitoring_traefik_tracing_enabled | default(true) %}
# Send traces to Jaeger (OTLP). Jaeger all-in-one exposes 4318.
tracing:
  otlp:
    enabled: true
    http:
      enabled: true
      endpoint: "http://jaeger.{{ monitoring_namespace }}.svc:4318/v1/traces"
{% endif %}

{% if monitoring_enabled | default(false) %}
# Prometheus metrics for Grafana Traefik dashboard (chart adds metrics entrypoint)
metrics:
  prometheus:
    entryPoint: metrics
    addEntryPointsLabels: true
    addServicesLabels: true
  service:
    enabled: true
{% endif %}

additionalArguments:
  - '--global.checknewversion=false'
  - '--global.sendanonymoususage=false'
  - '--log.level=WARN'
  - '--api.insecure=false'
  - '--accesslog=true'
  - '--accesslog.filepath=/tmp/traefik-access.log'

resources:
  requests:
    cpu: 100m
    memory: 128Mi
  limits:
    cpu: 500m
    memory: 512Mi

# When VPN internal enabled and 1 replica: pin to WireGuard server node (hostPort 80/443 on 10.10.10.1).
# When replicas > 1: do not pin (pods spread across nodes; each node binds hostPort; requires RWX persistence).
{% if vpn_internal_ui_enabled | default(false) and traefik_replicas | default(1) <= 1 %}
nodeSelector:
  kubernetes.io/hostname: "{{ traefik_vpn_node | default('node1') }}"
tolerations:
  - key: node-role.kubernetes.io/control-plane
    operator: Exists
    effect: NoSchedule
{% endif %}
