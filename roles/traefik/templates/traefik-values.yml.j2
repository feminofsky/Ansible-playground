# roles/traefik/templates/traefik-values.yml.j2
deployment:
  replicas: {{ traefik_replicas }}

service:
  type: LoadBalancer
  annotations:
    metallb.universe.tf/address-pool: contabo-pool
  spec:
    externalTrafficPolicy: Local   # Preserve client IP for vpn-allowlist middleware

# No anti-affinity: with 1 replica + ReadWriteOnce PVC, spreading would leave 2nd pod pending

# Chart v39+: redirectTo → http.redirections.entryPoint; tls → http.tls
# With hostPort, node forwards 80/443 to Traefik (8000/8443) — no privileged port bind in container
ports:
  web:
    hostPort: 80
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
          permanent: true
  websecure:
    hostPort: 443
    http:
      tls:
        enabled: true

certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ admin_email }}
      storage: /data/acme.json
      httpChallenge:
        entryPoint: web

persistence:
  enabled: true
  size: 256Mi

ingressRoute:
  dashboard:
    enabled: {{ (traefik_dashboard_exposed | default(false)) or (vpn_internal_ui_enabled | default(false)) }}

additionalArguments:
  - '--global.checknewversion=false'
  - '--global.sendanonymoususage=false'
  - '--log.level=WARN'
  - '--api.insecure=false'
  - '--accesslog=true'
  - '--accesslog.filepath=/tmp/traefik-access.log'

resources:
  requests:
    cpu: 100m
    memory: 128Mi
  limits:
    cpu: 500m
    memory: 512Mi

# When VPN internal enabled: hostPort 80/443 on node1 (10.10.10.1); pin to WireGuard server node
{% if vpn_internal_ui_enabled | default(false) %}
nodeSelector:
  kubernetes.io/hostname: "{{ traefik_vpn_node | default('node1') }}"
tolerations:
  - key: node-role.kubernetes.io/control-plane
    operator: Exists
    effect: NoSchedule
{% endif %}
