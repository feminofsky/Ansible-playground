# Kubernetes Secret for Velero S3 credentials (AWS/S3-compatible)
# Key "cloud" holds the ini-style credentials file expected by Velero AWS provider
---
apiVersion: v1
kind: Secret
metadata:
  name: velero-aws-credentials
  namespace: {{ velero_namespace }}
type: Opaque
stringData:
  cloud: |
    [default]
    aws_access_key_id={{ vault_velero_s3_access_key }}
    aws_secret_access_key={{ vault_velero_s3_secret_key }}
