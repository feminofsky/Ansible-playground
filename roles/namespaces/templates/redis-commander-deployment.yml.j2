# Redis Commander â€” web UI for Redis (VPN-only via Traefik)
apiVersion: apps/v1
kind: Deployment
metadata:
  name: redis-commander
  namespace: "{{ target_namespace }}"
  labels:
    app: redis-commander
spec:
  replicas: 1
  selector:
    matchLabels:
      app: redis-commander
  template:
    metadata:
      labels:
        app: redis-commander
    spec:
      containers:
        - name: redis-commander
          image: rediscommander/redis-commander:latest
          ports:
            - containerPort: 8081
          envFrom:
            - secretRef:
                name: redis-commander-env
          resources:
            requests:
              cpu: 50m
              memory: 64Mi
            limits:
              memory: 256Mi
---
apiVersion: v1
kind: Service
metadata:
  name: redis-commander
  namespace: "{{ target_namespace }}"
spec:
  selector:
    app: redis-commander
  ports:
    - port: 8081
      targetPort: 8081
      name: http