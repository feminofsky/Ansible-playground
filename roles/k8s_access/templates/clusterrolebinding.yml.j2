# roles/k8s_access/templates/clusterrolebinding.yml.j2
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ sa_name }}-binding
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ role }}
subjects:
- kind: ServiceAccount
  name: {{ sa_name }}
  namespace: {{ k8s_access_namespace }}
